{
  "env": {
    // "browser": true,
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  //   "extends": "eslint:recommended",
  "extends": ["eslint:recommended", "prettier"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "rules": {
    // "prettier/prettier": "error",

    "prettier/prettier": "warn",
    "no-console": "off",
    "no-unused-vars": "warn",
    // "semi": ["error", "always"],
    // "quotes": ["error", "double"],
    "func-names": "off",
    "no-process-exit": "off",
    "object-shorthand": "off",
    "class-methods-use-this": "off"
  }
}
